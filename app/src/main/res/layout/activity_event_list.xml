<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_interest_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        tools:context="com.example.myfirstapp.EventList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="48dp"
        android:paddingTop="8dp">

        <ListView
            android:id="@+id/EVENT_LIST"
            android:layout_height="330dp"
            android:layout_width="0dp"
            android:layout_marginStart="16dp"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="16dp"
            app:layout_constraintHorizontal_bias="0.28"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="NestedScrolling" />

        <Button
            android:layout_height="75dp"
            android:background="@drawable/circle"
            android:drawableTop="@drawable/ic_add_black_48dp"
            android:text="Add"
            android:textColor="#000000"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/EVENT_LIST"
            app:layout_constraintRight_toRightOf="@+id/EVENT_LIST"
            android:layout_marginEnd="48dp"
            android:layout_marginRight="48dp"
            android:id="@+id/EVENT_LIST_BUTTON_NEW"
            android:layout_width="75dp" />

        <!--<Button
            android:layout_height="75dp"
            android:background="@drawable/circle"
            android:drawableTop="@drawable/ic_clear_black_48dp"
            android:text="DEL"
            android:textColor="#000000"
            app:layout_constraintRight_toRightOf="@+id/INTEREST_LIST"
            android:layout_marginEnd="48dp"
            android:layout_marginRight="48dp"
            android:id="@+id/button2"
            app:layout_constraintTop_toTopOf="@+id/button3"
            android:layout_width="75dp" />-->


    </android.support.constraint.ConstraintLayout>
</ScrollView>
